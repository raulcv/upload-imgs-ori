{{#if barralateral.comentariosnovedosos}}
<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h5><i class="fas fa-comment"></i> Ultimos comentarios</h5>
    </div>
    <div class="card-body">
        {{#each barralateral.comentariosnovedosos}}
            <div class="row">
                <div class="col">
                    <a href="/images/{{foto.uniqueId}}">
                        <img src="/public/upload/{{foto.nombreimg}}" class="img-thumbnail w-70" alt="No hay imagen">
                    </a>
                </div>
                <div class="col">
                    <blockquote class="w-100">
                        <p>{{comentario}}</p>
                        <footer class="blockquote-footer">
                            <span>{{nombre}}</span>
                            <span>{{tiempoatras fecha}}</span>
                        </footer>
                    </blockquote>
                </div>
            </div>
        {{/each}}
    </div>
</div>
{{/if}}