{{#if barralateral.estadisticas}}
<div class="card mb-2">
    <div class="card-header bg-dark text-white">
        <h5><i class="far fa-chart-bar"></i> Estadisticas</h5>
    </div>
    <div class="card-body">
        <p><i class="fas fa-images"></i> Imagenes: {{barralateral.estadisticas.imgs}}</p>
        <p><i class="fas fa-comments"></i> Comentarios: {{barralateral.estadisticas.comentarios}}</p>
        <p><i class="fas fa-eye"></i> Vistas: {{barralateral.estadisticas.totalVistas}}</p>
        <p><i class="fas fa-heart"></i> Likes: {{barralateral.estadisticas.totalLikes}}</p>

    </div>
</div>
{{/if}}