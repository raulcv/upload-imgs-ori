<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="fa fa-image"></i>Subir imagen
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name="image" id="inputGroup"
                            aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroupFile">Escoge tu imagen</label>
                        </input>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="titulo" class="form-control" placeholder="Titulo para la imagen">
            </div>
            <div class="form-group">
                <textarea name="descripcion" rows="2" class="form-control"
                    placeholder="AÃ±ade una descripcion a la imagen" required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i> Subir Imagen
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3><i class="fa fa-image"></i>Subidas recientes</h3>
    </div>
    <div class="card-body">
        <row class="row">
            {{#each imgs}}
            <div class="col-md-14">
                <a href="/images/{{uniqueId}}">
                    <img src="/public/upload/{{nombreimg}}" alt="" class="w-100 h-100 img-thumbnail">
                </a>
            </div>
            {{/each}}
        </row>
    </div>
</div>